
<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Submit Your Story for: <%= @challenge.title %></h1>

  <%= form_with(model: [@hub, @challenge, @story_submission], class: "space-y-4", html: { multipart: true }) do |f| %>
    <% if @story_submission.errors.any? %>
      <div class="bg-red-50 p-4 rounded mb-6">
        <h2 class="text-red-700 font-medium"><%= pluralize(@story_submission.errors.count, "error") %> prevented your story from being saved:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% @story_submission.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title, "Story Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :content, "Story Content", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :content, rows: 10, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :image, "Upload Image (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.file_field :image, class: "w-full px-3 py-2 border border-gray-300 rounded-md", accept: "image/*" %>
    </div>

    <div>
      <%= f.submit "Submit Story", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Cancel", hub_user_challenge_path(@hub, @user, @challenge), class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>