
<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Community Hubs</h1>

  <div class="mb-6">
    <%= link_to "Create New Hub", new_hub_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @hubs.each do |hub| %>
      <div class="border rounded-lg p-6 shadow-sm">
        <h2 class="text-xl font-semibold mb-2"><%= hub.name %></h2>
        <p class="text-gray-600 mb-4"><%= hub.description %></p>
        <%= link_to "View Hub", hub_path(hub), class: "text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>
</div>