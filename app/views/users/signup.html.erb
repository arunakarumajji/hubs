
<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Complete Your Registration for <%= @hub.name %></h1>

  <%= form_with(model: @user, url: complete_user_signup_path(hub_slug: @hub.slug, user_id: @user.id), method: :patch, class: "space-y-4") do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 p-4 rounded mb-6">
        <h2 class="text-red-700 font-medium"><%= pluralize(@user.errors.count, "error") %> prevented your registration from being completed:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <p class="text-gray-700 mb-2">Email: <span class="font-medium"><%= @user.email %></span></p>
    </div>

    <div>
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Complete Registration", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>
</div>