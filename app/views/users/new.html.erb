
<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Add New User to <%= @hub.name %></h1>

  <%= form_with(model: [@hub, @user], class: "space-y-4") do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 p-4 rounded mb-6">
        <h2 class="text-red-700 font-medium"><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-sm text-gray-500 mb-2">Optional - user can add this during signup</p>
      <%= f.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-sm text-gray-500 mb-2">Optional - user can add this during signup</p>
      <%= f.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="bg-blue-50 p-4 rounded">
      <p class="text-blue-700">Note: The user will set their password when they complete their registration through the email invitation.</p>
    </div>

    <div>
      <%= f.submit "Add User", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Users", hub_users_path(@hub), class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>