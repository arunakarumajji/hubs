
<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Set Up Email Configuration</h1>

  <%= form_with(model: [@hub, @email_config], class: "space-y-4") do |f| %>
    <% if @email_config.errors.any? %>
      <div class="bg-red-50 p-4 rounded mb-6">
        <h2 class="text-red-700 font-medium"><%= pluralize(@email_config.errors.count, "error") %> prevented this configuration from being saved:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% @email_config.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :from_email, "From Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :from_email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :subject, "Email Subject", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :subject, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :body, "Email Body", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-sm text-gray-500 mb-2">You can use HTML formatting. A signup button will be automatically added at the end.</p>
      <%= f.text_area :body, rows: 10, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Save Email Configuration", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Hub", hub_path(@hub), class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>